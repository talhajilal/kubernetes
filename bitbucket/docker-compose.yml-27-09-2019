version: '3'

services:
  bitbucket:
    image: 192.168.0.50:5000/bitbucket:1.0
    volumes:
      - "/docker/var/atlassian/bitbucket:/var/atlassian/bitbucket"
    ports:
      - '80:7990'
    deploy:
      replicas: 1
      resources:
        limits:
          cpus: '0.01'
          memory: 512M
        reservations:
         cpus: '0.01'
         memory: 200M

